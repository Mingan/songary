@import '../../../bower_components/bootstrap/dist/css/bootstrap.min.css'
@import '../../../bower_components/stylus-nib'
@import '../../../bower_components/este-library/este/css'

html:not(.is-desktop)
  // Disable hover for touch devices since it's janky.
  a, a:hover
    color #428bca
    text-decoration none
    // Reimplemented hover via PointerEvents works like a charm.
    &.touch-hover
      color #2a6496
      text-decoration underline

body
  font-family: 'PT Sans', sans-serif;
  font-size 16px
  line-height 1.4

  .app
    padding 0 1em
    @import 'pages/editsong'
    @import 'pages/home'
    @import 'pages/notfound'
    @import 'pages/song'

  .horizontal button
    margin-right .625em