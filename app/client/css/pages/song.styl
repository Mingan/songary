.song
  // NOTE(steida): Overflow hidden prevents hidden menu to show scrollbars.
  overflow hidden
  pos absolute 0 0 0 0

  article
    padding 1em
    text-align left
    white-space pre

    sup
      color #428BCA
      font-size 110%
      font-style italic
      font-weight bold
      letter-spacing 1px

  menu
    inline-block-container()
    background-color rgba(0, 0, 0, 0.7)
    font-size 2rem
    margin 0
    padding 0
    pos absolute auto 0 0 0
    transform translateY(0)
    transition all .5s

    &.este-hidden
      transform translateY(100%)
      background-color rgba(0, 0, 0, 0)

    > *, .touch-hover
      color #fff
      margin 0
      padding .625em 1em